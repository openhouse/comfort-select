# Core scheduling
CYCLE_MINUTES=5
TIMEZONE=America/New_York

# Location (example)
HOME_LAT=40.0
HOME_LON=-73.0

# OpenAI
OPENAI_API_KEY=your_key
OPENAI_MODEL=gpt-5.2
# Optional: faster/cheaper model for decisions
OPENAI_DECISION_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=120000
OPENAI_MAX_RETRIES=2
PROMPT_TEMPLATE_PATH=./config/prompt/llm-prompt-template.md.hbs
SITE_CONFIG_PATH=./config/site.config.json
# Optional override for curators (JSON array of names); defaults to site config
CURATORS_JSON=

# History windowing + prompt guardrails
HISTORY_MODE=window
HISTORY_ROWS=200
PROMPT_MAX_CHARS=120000
PROMPT_HISTORY_MAX_ROWS=120
PROMPT_HISTORY_MAX_MINUTES=180
PROMPT_HISTORY_SUMMARY_MAX_CHARS=1200

# Network
HTTP_TIMEOUT_MS=10000

# Google Sheets (service account)
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEETS_SHEET_NAME=TimeSeries
GOOGLE_SERVICE_ACCOUNT_JSON=/absolute/path/to/service-account.json

# MongoDB (source of truth for history; MONGO_URL is also accepted)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=comfort_select
MONGODB_COLLECTION=cycle_records

# Sheet projection/export window
SHEET_SYNC_ROWS=2000

# Sensors: Ecowitt source
# Options: mock | local_gateway | cloud_api
ECOWITT_SOURCE=mock

# Ecowitt local gateway
ECOWITT_GATEWAY_URL=http://192.168.1.123
ECOWITT_MAPPING_JSON=./config/sensors.mapping.json

# Ecowitt Cloud API
ECOWITT_CLOUD_APPLICATION_KEY=your_application_key
ECOWITT_CLOUD_API_KEY=your_api_key
# Optional: set to prefer a specific device MAC; otherwise the first device is used
ECOWITT_CLOUD_DEVICE_MAC=

# Actuation
DRY_RUN=true

# Alexa (Transom AE) via webhook adapter (you implement endpoint or Home Assistant)
ALEXA_WEBHOOK_URL=http://localhost:8787/alexa
ALEXA_WEBHOOK_TOKEN=devtoken

# Meross plugs (Vornado 630) via webhook adapter
MEROSS_WEBHOOK_URL=http://localhost:8787/meross
MEROSS_WEBHOOK_TOKEN=devtoken

# Alexa routine bridge (alexa-remote2)
ACTUATOR_BRIDGE_PORT=8787
# Hosting platforms may enforce PORT; both are supported
ALEXA_ROUTINE_DEVICE_NAME=Echo Dot Example
# Preferred env var; ALEXA_ROUTINE_MAP_PATH is also accepted for backwards compatibility
ROUTINE_MAP_PATH=./config/alexa.routines.json
ALEXA_ROUTINE_MAP_PATH=./config/alexa.routines.json
# Provide either ALEXA_COOKIE (raw cookie string) or ALEXA_COOKIE_JSON pointing to a file with {"cookie": "..."}.
ALEXA_COOKIE=
ALEXA_COOKIE_JSON=./config/secrets/alexa-cookie.json
ALEXA_COOKIE_PATH=./config/secrets/alexa-cookie.json
ALEXA_AMAZON_DOMAIN=amazon.com
ALEXA_ACCEPT_LANGUAGE=en-US
ALEXA_COOKIE_PROXY_PORT=3456
ALEXA_COOKIE_PROXY_OWN_IP=localhost
ALEXA_COOKIE_PROXY_LISTEN_BIND=127.0.0.1
ALEXA_INIT_TIMEOUT_MS=60000
ALEXA_INIT_RETRY_MS=30000
DEBUG_ALEXA=0

# Minimal HTTP server (for Dokku health check)
# The main app uses PORT; leave as default 3000 for local dev.
